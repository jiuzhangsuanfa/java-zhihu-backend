<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiuzhang.zhihu.mapper.UserPushRelMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="userPushRelResultMap" type="com.jiuzhang.zhihu.entity.UserPushRel">
        <id column="user_id" property="userId"/>
        <result column="push_id" property="pushId"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modify" property="gmtModify"/>
    </resultMap>


    <select id="selectUserPushRelPage" resultMap="userPushRelResultMap">
        select * from user_push_rel where is_deleted = 0
    </select>

</mapper>
